<div class='page-header'>
  <h1> Review <%=@product.name %> </h1>
</div>

<% if @product_review.errors.any? %>
<div class="alert alert-danger">
  <% @product_review.errors.full_messages.each do |message| %>
    <%= message %><br>
    <% end %>
</div>
<% end %>

  <%= form_for([@product, @product_review ]) do |f| %>
        <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
        </p>

        <p>
        <%= f.label :description %>
        <%= f.text_field :description %>
        </p>

        <p>
        <%= f.label :rating %>
        <%= f.select(:rating, (1..10).to_a) %>
        </p>

      <%= f.submit %>

  <% end %>
